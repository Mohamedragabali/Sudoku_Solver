<resources>
    <!-- Base application theme. -->
    <style name="Theme.SudokuSolver" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/white</item>
        <item name="colorPrimaryVariant">@color/black</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="numberStyle" >
        <item name="android:onClick">onClickNumber</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/number_style</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="textViewStyle">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_rowWeight">1</item>
        <item name="android:layout_columnWeight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">12sp</item>
        <item name="android:background">@drawable/textview_line_strock</item>
        <item name="android:onClick">onClickText</item>
        <item name="android:gravity">center</item>
    </style>

</resources>